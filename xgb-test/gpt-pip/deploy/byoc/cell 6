REGION="us-east-1"  # <-- CHANGE if needed
ACCOUNT_ID=$(aws sts get-caller-identity --query Account --output text)
REPO_NAME="multi-target-xgb-custom"

aws ecr create-repository --repository-name $REPO_NAME --region $REGION || true

aws ecr get-login-password --region $REGION \
  | docker login --username AWS --password-stdin ${ACCOUNT_ID}.dkr.ecr.${REGION}.amazonaws.com

docker tag multi-target-xgb-custom:latest ${ACCOUNT_ID}.dkr.ecr.${REGION}.amazonaws.com/${REPO_NAME}:latest

docker push ${ACCOUNT_ID}.dkr.ecr.${REGION}.amazonaws.com/${REPO_NAME}:latest
